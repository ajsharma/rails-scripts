#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../../boot'
require 'optparse'
require 'optparse/time'

# Create a rename of class from its current name to a new name.

options = Struct.new(:from, :to) do
          end.new

OptionParser.new do |parser|
  parser.on("-fFROM", "--from FROM", String, "Original class name to rename") do |from|
    options.from = from
  end

  parser.on("-tTO", "--to TO", String, "New name of the class") do |to|
    options.to = to
  end
end.parse!

RailsScripts::Commands::MoveClassCommand.run(**options.to_h)
